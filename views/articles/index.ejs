<!DOCTYPE html>
<html lang="en">

<head>
    <title>Blog</title>
    <%- include('../common/head') %>
</head>

<body>
    <div class="container">

        <h1 class="mb-4">
            Blog Articles
        </h1>
        <a href="/articles/new" class="btn btn-success">
            New Article
        </a>

        <% articles.forEach(article => { %>
        <div class="card mt-4">
            <div class="card-body">
                <h4 class="card-title">
                    <%= article.title %>
                </h4>
                <div class="card-subtitle text-muted mb-2">
                    <%= article.createdAt.toLocaleDateString() %>
                </div>
                <div class="card-text mb-2">
                    <%= article.description %>
                </div>
                <div>
                    <a href="/articles/<%= article.slug %>" class="btn btn-primary">Open</a>
                    <a href="/articles/edit/<%= article.id %>" class="btn btn-secondary">Edit</a>
                    <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
        <% }) %>

    </div>
</body>

</html>